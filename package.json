{
  "name": "brakes",
  "version": "2.2.0",
  "description": "Node.js Circuit Breaker Pattern",
  "main": "index.js",
  "files": [
    "lib/",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/awolden/brakes.git"
  },
  "scripts": {
    "test": "node_modules/.bin/_mocha  $(find . -name '*.spec.js')",
    "test:lint": "eslint .",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- $(find . -name '*.spec.js')",
    "coveralls": "cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "coverage:win": "node_modules/.bin/istanbul cover node_modules/mocha/bin/_mocha ./tests/*.spec.js",
    "test:win": "node_modules/.bin/_mocha ./tests/*.spec.js"
  },
  "keywords": [
    "circuit",
    "breaker",
    "circuit-breaker",
    "circuitbreaker",
    "hystrix"
  ],
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-config-airbnb",
      "eslint-plugin-import",
      "eslint-plugin-jsx-a11y",
      "eslint-plugin-react"
    ]
  },
  "author": "Alex Wolden <awolden@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.4.6"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-things": "^0.2.0",
    "coveralls": "^2.11.13",
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.1.0",
    "eslint-plugin-import": "^1.15.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "sinon": "^1.17.5"
  }
}
